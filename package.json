{
  "name": "@hexancore/auth-keycloak",
  "packageManager": "yarn@3.6.1",
  "private": true,
  "version": "0.0.0",
  "author": {
    "name": "Andrzej Wasiak",
    "email": "contact@andrzejwasiak.pl",
    "url": "https://andrzejwasiak.pl"
  },
  "engines": {
    "node": ">=18"
  },
  "engine-strict": true,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --maxWorkers=50% --passWithNoTests",
    "test:clearCache": "jest --clearCache",
    "test:unit": "jest --maxWorkers=50% --group=unit",
    "test:watch": "jest --maxWorkers=50% --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublish": "yarn test && yarn run build"
  },
  "dependencies": {
    "@hexancore/common": "^0.10.4",
    "@hexancore/core": "^0.10.2",
    "@keycloak/keycloak-admin-client": "^22.0.3",
    "axios": "^1.4.0",
    "jose": "^4.14.4",
    "js-yaml": "^4.1.0",
    "openid-client": "^5.5.0"
  },
  "devDependencies": {
    "@hexancore/mocker": "^1.0.1",
    "@nestjs/bull": "^10.0.1",
    "@nestjs/cli": "^10.1.11",
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/cqrs": "^10.2.5",
    "@nestjs/platform-fastify": "^10.1.3",
    "@nestjs/swagger": "^7.1.8",
    "@nestjs/testing": "^10.1.3",
    "@types/jest": "29.0.*",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "jest": "29.6.*",
    "jest-docblock": "29.4.*",
    "jest-expect-message": "^1.1.3",
    "jest-runner": "29.6.*",
    "jest-runner-groups": "^2.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.*",
    "typescript": "4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "runner": "groups",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@$": "<rootDir>/src",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/test/integration/**/*.test.ts"
    ],
    "setupFiles": [
      "<rootDir>/test/config.ts"
    ],
    "coverageDirectory": "./test/coverage",
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/hexancore/auth-keycloak/issues"
  },
  "directories": {
    "lib": "lib"
  }
}
